<?php $store_count = count($this->getStores()); ?>
<?php if($store_count > 1): ?>
<ul class="flags">
    <?php $i = 1; ?>
    <?php foreach ($this->getStores() as $_lang): ?>
        <?php $_selected = ($_lang->getId() == $this->getCurrentStoreId()) ? ' current' : '' ?>
        <?php
        $country_code = 'vn';
        if($_lang->getCode()=='en') $country_code = 'en';
        ?>
        <li class="flag<?php echo $_selected ?><?php if($i==$store_count) echo ' last' ?>"><a href="<?php echo $_lang->getCurrentUrl() ?>" title="<?php echo $this->htmlEscape($_lang->getName()) ?>"><img src="<?php echo $this->getSkinUrl('images/flags/' . $country_code . '.png') ?>" alt="<?php echo $this->htmlEscape($_lang->getName()) ?>"/></a></li>
    <?php $i++; ?>
    <?php endforeach; ?>
</ul>
<?php endif; ?>
